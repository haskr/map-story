.top-bar {
  height: 40px;
  padding: 20px 10px 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  background-color: #fff;
  border-bottom: 1px solid rgb(230, 230, 230);
}

.cancel {
  color: gray;
}


.picker-list {
  position: relative;
  /* padding-top: 30px; */
  margin-top: env(safe-area-inset-top);
}

.picker-wraper {
  width: 100%;
  padding: 15px 10px 0;
  box-sizing: border-box;
}

.sub-text {
  color: #373737;
  margin-bottom: 5px;
}

.title, .story {
  margin-bottom: 20px;
}

.pos-btn {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 200px;
  height: 40px;
  /* background-color: red; */
  margin: none;
  color: #4d4b4b;
  border-radius: 4px;
}

.pos-btn::before {
  content: "";
  display: inline-block;
  width: 25px;
  height: 25px;
  background-image: url('data:image/png;base64,');
  background-size: 25px 25px;
}

.pos-ipt {
  color: #7e7a7a;
}

.btn-area {
  margin-top: 25px;
}

.submit {
  display: inline-block;
  padding: 8px 13px;
  background-color: #57da57;
  color: #fff;
  font-weight: normal;
  border-radius: 5px;
}

.pos-hover {
  background-color: #edeaea;
}

.submit-hover {
  background-color: #379437;
}


