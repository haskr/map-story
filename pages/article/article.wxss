.container {
  background-color: #f7f7f5;
  /* color: #17ba17; */
  overflow-y: scroll;
}

.back {
  position: fixed;
  left: 30rpx;
  top: 80rpx;
  width: 60rpx;
  height: 60rpx;
  margin-top: env(safe-area-inset-top);
  background-color: rgba(0, 0, 0, 0.4);
  border-radius: 50%;
  background-image: url('data:image/png;base64,');
  background-size: 32rpx 32rpx;
  background-position: center center;
  background-repeat: no-repeat;
  z-index: 20;
}

.images {
  margin-top: 20rpx;
}

.swiper {
  width: 100%;
  height: 500rpx;
  background-color: #121212;
  border-radius: 10rpx;
  overflow: hidden;
}

.item {
  position: relative;
}

.img {
  width: 100%;
  height: 100%;
}

.main {
  padding: 10rpx 30rpx;
}

.title {
  margin-top: 20rpx;
}

.info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.info-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 0;
}

.name {
  font-size: 14px;
  max-width: 250rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-left: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.info-right {
  line-height: 1;
  text-align: right;
}

.time {
  width: 250rpx;
  font-size: 12px;
  margin-top: 6rpx;
  color: gray;
}

.loaction {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 10rpx;
  margin-left: 5rpx;
  font-size: 12px;
  color: gray;
  overflow: hidden;
}

.loaction .loc-txt {
  max-width: 680rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.loaction:before {
  content: '';
  width: 25rpx;
  height: 25rpx;
  margin-right: 8rpx;
  background-image: url('data:image/png;base64,');
  background-size: 100% 100%;
}

.content {
  margin: 20rpx 0;
}

.content-txt {
  font-size: 14px;
  color: #303030;
  line-height: 1.4;
  white-space: pre-wrap;
}

.poster {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  max-height: 500rpx;
  overflow: hidden;
}

.poster-img {
  width: 100%;
  height: auto;
}

.poster-txt {
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  max-width: 600rpx;
  font-size: 16px;
  color: #fff;
  text-shadow: 1px 1px 8px #444;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}





